<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text View -->
    <style name="Text" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/margin_medium_2</item>
        <item name="android:paddingEnd">@dimen/margin_medium_2</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Regular.18" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_regular_2_5x</item>
    </style>

    <style name="Text.Regular.16" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_regular_2x</item>
    </style>

    <style name="Text.Regular.14" parent="Text.Regular">
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <style name="Text.Bold.18" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_regular_2_5x</item>
    </style>

    <style name="Text.Bold.16" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_regular_2x</item>
    </style>

    <style name="Text.Bold.14" parent="Text.Bold">
        <item name="android:textSize">@dimen/text_regular</item>
    </style>

    <!-- Material Button -->
    <style name="ActionButton.SmallTextButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primary_text</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingStart">@dimen/margin_medium_1</item>
        <item name="android:paddingEnd">@dimen/margin_medium_1</item>
        <item name="android:minHeight">@dimen/margin_medium_2</item>
        <item name="android:minWidth">@dimen/margin_medium_2</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ActionButton.Default" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primary_text</item>
        <item name="cornerRadius">@dimen/card_default_corner_radius</item>
        <item name="android:paddingTop">@dimen/margin_medium_2</item>
        <item name="android:paddingBottom">@dimen/margin_medium_2</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/margin_medium_2</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium_2</item>
    </style>

    <style name="ActionButton.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/primary_text</item>
        <item name="cornerRadius">@dimen/card_default_corner_radius</item>
        <item name="android:paddingTop">@dimen/margin_medium_2</item>
        <item name="android:paddingBottom">@dimen/margin_medium_2</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/margin_medium_2</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium_2</item>
    </style>

    <style name="ActionButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/primary_text</item>
        <item name="strokeColor">@color/primary_text</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">@dimen/card_default_corner_radius</item>
        <item name="android:paddingTop">@dimen/margin_medium_1</item>
        <item name="android:paddingBottom">@dimen/margin_medium_1</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/margin_medium_2</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium_2</item>
    </style>

    <style name="ActionButton.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primary_text</item>
        <item name="cornerRadius">@dimen/card_default_corner_radius</item>
        <item name="android:paddingTop">@dimen/margin_medium_2</item>
        <item name="android:paddingBottom">@dimen/margin_medium_2</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/margin_medium_2</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium_2</item>
    </style>

    <style name="ActionButton.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:paddingBottom">@dimen/margin_medium_2</item>
        <item name="android:layout_marginStart">@dimen/margin_medium_2</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium_2</item>
        <item name="android:paddingTop">@dimen/margin_medium_2</item>
        <item name="android:insetTop">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cornerRadius">@dimen/margin_medium_3</item>
        <item name="cornerFamily">rounded</item>
        <item name="elevation">@dimen/card_default_elevation</item>
        <item name="iconGravity">textStart</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:minWidth">@dimen/icon_button_default</item>
        <item name="android:minHeight">@dimen/icon_button_default</item>
    </style>

    <!-- Shapable Image View -->
    <style name="RoundedCornerImageViewShapeMedium" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/margin_medium</item>
    </style>

    <style name="CircleImageViewShape4" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/margin_small</item>
    </style>

    <style name="CircleImageViewShape8" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/margin_medium</item>
    </style>

</resources>